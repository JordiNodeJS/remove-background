{
  "name": "remove-background",
  "version": "1.0.0",
  "description": "Aplicación web para eliminar fondos de imágenes automáticamente",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:all": "bun run --parallel --signal --filter=@remove-background/frontend --filter=@remove-background/api dev",
    "dev": "bun run --parallel --filter=@remove-background/frontend --filter=@remove-background/api dev",
    "kill": "kill-port 3000",
    "dev:frontend": "bun run --filter=@remove-background/frontend dev",
    "dev:backend": "bun run --filter=@remove-background/api dev",
    "build": "bun run --parallel --filter=@remove-background/* build",
    "start": "bun run --parallel --filter=@remove-background/* start"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@imgly/background-removal-node": "^1.4.5",
    "kill-port": "^2.0.1"
  }
}